<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">


    <select id="checkUser" parameterType="java.lang.String" resultType="boolean" >
        SELECT EXISTS(
            SELECT 	user_no
            FROM	tb_user
            WHERE	user_no = #{userNo}
        )
    </select>

    <select id="selectUser" parameterType="java.lang.String" resultType="com.kaybo.kybit.model.User" >
        SELECT user_no, user_id, kybit
        FROM	tb_user
        WHERE	user_no = #{userNo}
    </select>

    <insert id="insertUser" parameterType="com.kaybo.kybit.model.User">
        INSERT INTO tb_user
        (user_no, user_id)
        VALUES
        (#{userNo}, #{userId});
    </insert>

    <update id="updateKybitPlus" parameterType="com.kaybo.kybit.model.Transaction">
        UPDATE tb_user SET
            kybit = kybit + #{kybit}
        WHERE 	user_no = #{userNo}
    </update>

</mapper>